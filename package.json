{
  "name": "Node Boiler",
  "version": "1.0.0",
  "main": "server.js",
  "license": "none",
  "private": true,
  "scripts": {
    "dev": "source .env && nodemon ./app/server.js",
    "start": "source .env && node app/server.js ",
    "pretest": "docker-compose up -d && npm run migrate-up; echo 'pg is ready.'",
    "test": "jest --verbose --forceExit --passWithNoTests; echo 'tests are complete.'",
    "posttest": "docker-compose down",
    "docs": "node ./app/swagger/jsdocs.js",
    "migrate-up": "cd ./app/db && npx sequelize-cli db:migrate",
    "migrate-down": "cd ./app/db && npx sequelize-cli db:migrate:undo"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^5.0.0",
    "express": "^4.18.2",
    "lodash": "^4.17.19",
    "node-fetch": "^2.7.0",
    "pg": "^8.13.3",
    "sequelize": "^6.37.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "babel-jest": "29.5.0",
    "eslint": "^7.3.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.2",
    "request": "2.83.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "xo": "^0.37.1"
  },
  "engines": {
    "node": "^18.20.5"
  }
}
