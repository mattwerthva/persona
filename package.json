{
  "name": "Persona",
  "version": "1.0.0",
  "main": "server.js",
  "license": "none",
  "private": true,
  "scripts": {
    "docs": "node ./app/swagger/jsdocs.js",
    "dev": "node app/server.js",
    "migrate": "npx sequelize-cli --config app/db/config/config.json --migrations-path app/db/migrations db:migrate",
    "start": "docker-compose up -d && NODE_ENV=development npm run migrate && docker-compose logs -f persona",
    "stop": "docker-compose down",
    "debug": "docker-compose up -d postgres && NODE_ENV=development npm run migrate && nodemon --inspect app/server.js",
    "test": "docker-compose up -d postgres && NODE_ENV=development npm run migrate && PG_HOST=localhost jest && docker-compose down",
    "debugtest": "PG_HOST=localhost jest"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^5.0.0",
    "express": "^4.18.2",
    "lodash": "^4.17.19",
    "node-fetch": "^2.7.0",
    "pg": "^8.13.3",
    "sequelize": "^6.37.5",
    "sequelize-cli": "6.6.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "babel-jest": "29.5.0",
    "eslint": "^7.3.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.2",
    "request": "2.83.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "xo": "^0.37.1"
  },
  "engines": {
    "node": "^18.20.5"
  },
  "jest": {
    "testTimeout": 10000
  }
}
