    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch npm start",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start"],
            "skipFiles": ["<node_internals>/**"],
            "cwd": "${workspaceFolder}"
        },
        {
            "cwd": "${workspaceFolder}",
            "command": "npm run start",
            "name": "Run Service",
            "request": "launch",
            "type": "node-terminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "cwd": "${workspaceFolder}",
            "command": "npm run docs",
            "name": "Run Docs",
            "request": "launch",
            "type": "node-terminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "cwd": "${workspaceFolder}",
            "command": "npm run test",
            "name": "Run Tests",
            "request": "launch",
            "type": "node-terminal",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}